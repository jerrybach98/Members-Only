<%= form_with model: @user do |form| %>
  <%= form.label :username, "Username:" %>
  <%= form.text_field :username, placeholder:"User123" %><br><br>

  <%= form.label :email, "Email:" %>
  <%= form.text_field :email, placeholder:"example@example.com" %><br><br>

  <%= form.label :password, "Password:" %>
  <%= form.text_field :password %><br><br>

  <%= form.submit "Create Account" %>
<% end %>